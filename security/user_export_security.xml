<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category -->
    <record id="module_category_user_export" model="ir.module.category">
        <field name="name">User Export</field>
        <field name="description">User Export Module for YODY</field>
        <field name="sequence">100</field>
    </record>

    <!-- Groups -->
    <record id="group_user_export_user" model="res.groups">
        <field name="name">User Export User</field>
        <field name="category_id" ref="module_category_user_export"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_user_export_manager" model="res.groups">
        <field name="name">User Export Manager</field>
        <field name="category_id" ref="module_category_user_export"/>
        <field name="implied_ids" eval="[(4, ref('group_user_export_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="user_export_log_rule_user" model="ir.rule">
        <field name="name">User Export Log: User can see own exports</field>
        <field name="model_id" ref="model_user_export_log"/>
        <field name="domain_force">[('exported_by', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_user_export_user'))]"/>
    </record>

    <record id="user_export_log_rule_manager" model="ir.rule">
        <field name="name">User Export Log: Manager can see all</field>
        <field name="model_id" ref="model_user_export_log"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_user_export_manager'))]"/>
    </record>
</odoo>